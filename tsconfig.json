{
  "compilerOptions": {
    "jsx": "react",
    "module": "esnext",
    "target": "es2017",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "declaration": true
  },
  "include": [
    "src/**/*.tsx"
  ],
  "exclude": [
    "flagpack-core"
  ],
  "types" : ["node"]
}
